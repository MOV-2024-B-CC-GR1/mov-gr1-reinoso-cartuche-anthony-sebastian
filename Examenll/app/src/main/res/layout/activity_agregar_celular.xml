<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarCelularActivity">


    <EditText
        android:id="@+id/etMarca"
        android:layout_width="314dp"
        android:layout_height="43dp"
        android:hint="Marca"
        app:layout_constraintBottom_toTopOf="@+id/etModelo"
        app:layout_constraintEnd_toEndOf="@+id/etModelo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etModelo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <EditText
        android:id="@+id/etModelo"
        android:layout_width="314dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:hint="Modelo"
        app:layout_constraintBottom_toTopOf="@+id/etPrecio"
        app:layout_constraintEnd_toEndOf="@+id/etPrecio"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etPrecio" />

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="315dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:hint="Precio"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/etFechaLanzamiento"
        app:layout_constraintEnd_toEndOf="@+id/etFechaLanzamiento"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etFechaLanzamiento" />

    <EditText
        android:id="@+id/etFechaLanzamiento"
        android:layout_width="326dp"
        android:layout_height="47dp"
        android:layout_marginBottom="28dp"
        android:hint="Fecha de Lanzamiento (YYYY-MM-DD)"
        app:layout_constraintBottom_toTopOf="@+id/cbDisponible"
        app:layout_constraintEnd_toEndOf="@+id/cbDisponible"
        app:layout_constraintStart_toStartOf="@+id/cbDisponible" />

    <CheckBox
        android:id="@+id/cbDisponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Disponible"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarCelular"
        app:layout_constraintEnd_toEndOf="@+id/btnGuardarCelular"
        app:layout_constraintStart_toStartOf="@+id/btnGuardarCelular" />

    <Button
        android:id="@+id/btnGuardarCelular"
        android:layout_width="176dp"
        android:layout_height="64dp"
        android:layout_marginBottom="220dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMarcaCelular"
        app:layout_constraintVertical_bias="0.223" />

</androidx.constraintlayout.widget.ConstraintLayout>