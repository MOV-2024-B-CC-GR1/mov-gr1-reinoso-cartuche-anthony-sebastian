<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CelularFormActivity">

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="241dp"
        android:layout_height="53dp"
        android:hint="Marca"
        app:layout_constraintBottom_toTopOf="@+id/etModelo"
        app:layout_constraintEnd_toEndOf="@+id/etModelo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etModelo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635" />

    <EditText
        android:id="@+id/etModelo"
        android:layout_width="244dp"
        android:layout_height="51dp"
        android:layout_marginBottom="40dp"
        android:hint="Modelo"
        app:layout_constraintBottom_toTopOf="@+id/etPrecio"
        app:layout_constraintEnd_toEndOf="@+id/etPrecio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etPrecio" />

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:hint="Precio"
        app:layout_constraintBottom_toTopOf="@+id/etFechaFabricacion"
        app:layout_constraintEnd_toEndOf="@+id/etFechaFabricacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etFechaFabricacion" />

    <EditText
        android:id="@+id/etFechaFabricacion"
        android:layout_width="245dp"
        android:layout_height="51dp"
        android:layout_marginBottom="56dp"
        android:hint="Fecha de FabricaciÃ³n"
        app:layout_constraintBottom_toTopOf="@+id/cbEsSmartphone"
        tools:layout_editor_absoluteX="83dp" />

    <CheckBox
        android:id="@+id/cbEsSmartphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="Es Smartphone"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarCelular"
        app:layout_constraintEnd_toEndOf="@+id/btnGuardarCelular"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="@+id/btnGuardarCelular" />

    <Button
        android:id="@+id/btnGuardarCelular"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginBottom="140dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="105dp" />

</androidx.constraintlayout.widget.ConstraintLayout>